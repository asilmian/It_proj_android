<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.SingleItemView">

    <androidx.cardview.widget.CardView
        android:id="@+id/new_family_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:elevation="12dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="150dp"
        app:layout_constraintBottom_toTopOf="@+id/singleItemViewSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/singleItemViewFiller">

        <ImageView
            android:id="@+id/singleItemViewImage"
            android:layout_width="312dp"
            android:layout_height="356dp"
            android:contentDescription="TODO"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/singleItemViewFiller"
            app:layout_constraintVertical_bias="0.048"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/singleItemViewFiller"
        android:layout_width="393dp"
        android:layout_height="39dp"
        android:background="@color/colorBtn"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/singleItemViewFiller4"
        android:layout_width="396dp"
        android:layout_height="112dp"
        android:background="@color/colorBtn"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/singleItemViewDescription"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/singleItemViewTagsHeader"
        android:layout_width="361dp"
        android:layout_height="30dp"
        android:text="Tags:"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/singleItemViewSpinner" />

    <TextView
        android:id="@+id/singleItemViewName"
        android:layout_width="397dp"
        android:layout_height="71dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorBtn"
        android:text="@string/enter_item_name"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/singleItemViewTags"
        android:layout_width="331dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_corner"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/singleItemViewSpinner" />

    <TextView
        android:id="@+id/singleItemViewDescription"
        android:layout_width="331dp"
        android:layout_height="151dp"

        android:background="@drawable/rounded_corner"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/singleItemViewTags"
        app:layout_constraintVertical_bias="0.23000002" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/singleItemViewDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/singleItemViewTags"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/singleItemViewDelete"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_delete"
        android:text="@string/delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/singleItemViewTransfer"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toEndOf="@+id/singleItemViewcp"
        app:layout_constraintTop_toBottomOf="@+id/singleItemViewDescription" />

    <Button
        android:id="@+id/singleItemViewcp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_privacy"
        android:text="@string/change_privacy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/singleItemViewDescription" />

    <Button
        android:id="@+id/singleItemViewTransfer"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_transfer"
        android:text="@string/transfer_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/singleItemViewDescription" />

    <ProgressBar
        android:id="@+id/singleItemViewSpinner"
        style="?android:attr/progressBarStyle"
        android:layout_width="166dp"
        android:layout_height="149dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>