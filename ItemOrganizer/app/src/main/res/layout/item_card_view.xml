<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:tag="cards main container">

    <View
        android:id="@+id/divider"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/common_google_signin_btn_text_dark_default" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:animationCache="false"
        android:clickable="true"
        android:focusable="true"
        card_view:cardBackgroundColor="#8DFABD"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_card_image"
                android:layout_width="35dp"
                android:layout_height="82dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:tag="image_tag"
                card_view:srcCompat="@drawable/ic_items" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="73dp"
                android:layout_marginTop="12dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_card_name"
                    android:layout_width="103dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Item Name"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/item_card_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Item Desc"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="7sp" />

                <TextView
                    android:id="@+id/item_card_tags"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Item Tags"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="8sp" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/divider2"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/common_google_signin_btn_text_dark_default" />

</LinearLayout>